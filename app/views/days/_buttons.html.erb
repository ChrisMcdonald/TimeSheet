<div class="box">
  <div class="btn-group"></div>
  <%= link_to 'Calender', root_path, class: 'btn btn-default' %>
  <%= link_to 'Hours', time_sheet_path(@day), class: 'btn btn-default' %>
  <%= link_to 'Travel', time_sheet_travels_path(@day), class: 'btn btn-default' %>
  <%= link_to 'Previous Day ', current_day_path(@day.time_period - 1.day,@day.project_id), class: 'btn btn-default' %>
  <%= link_to 'Next Day ', current_day_path(@day.time_period + 1.day,@day.project_id), class: 'btn btn-default' %>
</div>