<div class="simple-calendar ">
  <div class="calendar-heading">
    <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
    <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view %>
  </div>
  <div class="table-responsive"></div>
  <table class="table ">
    <thead>
    <tr>
      <% date_range.slice(0, 7).each do |day| %>
        <th><%= t('date.abbr_day_names')[day.wday] %></th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% date_range.each_slice(7) do |week| %>

      <tr>

        <% week.each do |day| %>
          <% t = @time_sheets.includes(:works).find_or_initialize_by(time_period: day) %>

          <% if t.has_time_sheet? %>

            <% if Work.find_by(time_sheet: t).invoice.present? %>

              <%= content_tag :td, class: [calendar.td_classes_for(day), 'has-invoice'] do %>
                <%= link_to current_day_path(day) do %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>

              <% end %>
            <% else %>

              <%= content_tag :td, class: [calendar.td_classes_for(day), 'has-time-sheet'] do %>
                <%= link_to current_day_path(day) do %>
                  <% block.call day, sorted_events.fetch(day, []) %>
                <% end %>
              <% end %>

            <% end %>
          <% else %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <%= link_to current_day_path(day) do %>
                <% block.call day, sorted_events.fetch(day, []) %>

              <% end %>
            <% end %>

          <% end %>

        <% end %>
        <% if can? :read, User %>
          <td>
            <%= button_tag 'Approve' %>

        <% end %>
      </tr>

    <% end %>
    </tbody>
  </table>
</div>
</div>
