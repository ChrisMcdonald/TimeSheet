<p id="notice"><%= notice %></p>

<p>
  <h1>Time Sheet for  <%= @time_sheet.time_period.strftime("%d %A %B %Y") %></h1>
</p>
<p>
  <strong>User:</strong>
  <%= @time_sheet.user.full_name %>
</p>
<table class="outline" style="width: 100%">
  <tr class="grey_backgound">
    <th>description</th>
    <th>hours</th>
    <th>project</th>
    <th></th>
  </tr>
  <% @time_sheet.works.each do |w| %>
  <tr>
    <td><%= w.description %></td>
    <td><%= w.hour %></td>
    <td><%= w.project_id %></td>
    <td><%=link_to 'delete', work_path( w.id), data: {confirm: 'Are you sure'}, method: :delete %></td>

  </tr>
  <% end %>
</table>
<%= link_to 'Edit', edit_time_sheet_path(@time_sheet) %> |
<%= link_to 'Back', time_sheets_path %>

