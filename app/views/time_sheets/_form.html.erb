<%= form_for( @time_sheet) do |f| %>
    <% if time_sheet.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(time_sheet.errors.count, "error") %> prohibited this time_sheet from being saved:</h2>

          <ul>
            <% time_sheet.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <h1>  <%= @time_sheet.user.first_name %>&nbsp<%= @time_sheet.user.last_name %></h1>
    <div class="field">
      <%= f.label :time_period %>
      <%= f.date_field :time_period , :value => Time.now.strftime('%Y-%m-%d') %>
    </div>

    <div class="actions">
      <%= f.submit "Add Day", class: 'btn btn-default' %>

    </div>
    <table class="outline">
      <tr style="background-color: #f0f0f0;">
        <th>Project</th>
        <th>Date</th>
        <th>Hours</th>
        <th>Description</th>
        <th>SubTotal</th>
      </tr>
      <%= render 'works', f: f %>
      <tr><td></td><td></td><td></td><td></td><td>total <br> <input type="text"></td></tr>

      </tr>
    </table>
<% end %>
