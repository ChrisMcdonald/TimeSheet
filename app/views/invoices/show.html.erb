                <th>Date worked</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Sub Total</th>


              </tr>
              <% @invoice.invoice_rows.each_with_index  do |time ,i| %>
                  <tr>
                    <td><%= time.username %></td>
                    <td><%= time.date.strftime("%A %b %d ") %></td>
                    <td><%= time.hours %></td>
                    <td><%= time.rate %></td>
                    <td><%= @row_total[i] %></td>
                  </tr>

              <% end %>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td>total <%= @total %> </td>

              <tr>
              </tr>
              </td>
              </tr>
            </table>
