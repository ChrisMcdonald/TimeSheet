<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>


    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :password %>
        </div>
        <div class=" col-sm-7">
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off" %>
          <%= f.text_field :first_name %>
          <%= f.text_field :last_name %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :password_confirmation %><br/>
        </div>
        <div class=" col-sm-7">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :email, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :email, autofocus: true, class: "form-control" %>
        </div>
      </div>
    </div>
    </div>
    </div>


    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :username, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :username, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :first_name, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :last_name, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :street_no, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :street_no, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :street, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :street, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :city, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :city, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :state, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :state, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :country, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :country, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :post_code, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :post_code, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="row">
        <div class="col-sm-2">
          <%= f.label :abn, class: "control-label" %>
        </div>
        <div class=" col-sm-7">
          <%= f.text_field :abn, class: "form-control" %>
        </div>
      </div>
    </div>


    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
<% end %>

<%= render "users/shared/links" %>
