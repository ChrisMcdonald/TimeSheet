<li class="shadow project-<%= project.id %>">
<div class="row">
  <div class="col-md-5 col-xs-5">
    <h5 class="clickable"> <%= project.name.humanize %></h5>
  </div>
  <div class="col-md-5 col-xs-5">
    <h5>
      <%= project.customer.full_name %>
    </h5>

    <%= link_to 'Show', project, class: "hidden" %>
  </div>
  <div class="col-md-1 col-xs-1 user">
    <%= link_to  project, data: { confirm: "Are you sure"},method: :delete do %>
        <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i>
    <%end %>
  </div>
</div>

</li>




