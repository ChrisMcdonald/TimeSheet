<html>
<head>
<script>
   function number_pages() {
        var vars={};
        var x=document.location.search.substring(1).split('&');
        for(var i in x) {var z=x[i].split('=',2);vars[z[0]] = decodeURIComponent(z[1]);}
        var x=['frompage','topage','page','webpage','section','subsection','subsubsection'];
        for(var i in x) {
          var y = document.getElementsByClassName(x[i]);
          for(var j=0; j<y.length; ++j) y[j].textContent = vars[x[i]];
        }
      }
    </script>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  <%= wicked_pdf_stylesheet_link_tag "pdf" -%>

<body onload="number_pages()" class="pdf-background">
<div class="alwaysbreak">
<table style="width: 100%; ">
  <tr class="pdf-tr ">
    <td><h1>Tax Invoice</h1>
    </td>
    <td pdf-tr >
      <div align="right" style="padding: 10">
      <h3>For time period</h3>
      <%= @time.first.time_period.strftime("%A %b %d ") %>|
      <%= Date.today.strftime("%A %b %d")  %>
      </div>
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <h2>to: <%= @project.customer.full_name %></h2>
      <p><%= @project.customer.address %> <br>
        ABN: <%= @project.customer.abn %></p>

      <p>
      <h2><%= current_user.full_name %> </h2>
      <%= current_user.address %> <br>
      ABN: <%= current_user.abn %></p>
    </td>
  </tr>
  <tr >
    <td colspan="2  ">
      <table class="table table-bordered table-striped" style="width: 100%">
        <tr class="grey_backgound">
          <th>Employee</th>
          <th>Date worked</th>
          <th>Hours</th>
          <th>Rate</th>

        </tr>
        <% @time.each do |time| %>
            <tr>
              <td><%= time.user.full_name %></td>
              <td><%= time.time_period.strftime("%A %b %d ") %></td>
              <td><%= time.hour %></td>
              <td></td>
            </tr>

        <% end %>
        <td></td>
        <td></td>
        <td>total <%= @project.sum_time_sheet(@time) %>  </td>

        <tr>
        </tr>
        </td>
        </tr>
      </table>
  <tr><td>Please pay you invoice with in 2 week or men with guns will come to you house and take possession of you dog</td></tr>
</div>
</table>
</body>
</html>