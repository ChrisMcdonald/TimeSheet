<p id="notice"><%= notice %></p>

<h1>Pay Rates</h1>

<table>
  <thead>
    <tr>
      <th>Rate</th>
      <th>Project</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pay_rates.each do |pay_rate| %>
      <tr>
        <td><%= pay_rate.rate %></td>
        <td><%= pay_rate.project %></td>
        <td><%= pay_rate.user %></td>
        <td><%= link_to 'Show', pay_rate %></td>
        <td><%= link_to 'Edit', edit_pay_rate_path(pay_rate) %></td>
        <td><%= link_to 'Destroy', pay_rate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Pay Rate', new_pay_rate_path %>
